{
  "name": "celebratix-assignment",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --testPathIgnorePatterns=e2e",
    "test:watch": "jest --watch --testPathIgnorePatterns=e2e",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=e2e",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:e2e:build:ios": "xcodebuild -workspace ios/CelebratixAssignment.xcworkspace -scheme CelebratixAssignment -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
    "test:e2e:metro": "npx expo start --no-dev --minify",
    "test:e2e": "detox test --config-path .detoxrc.js",
    "test:e2e:ios": "detox build --configuration ios.sim.debug --config-path .detoxrc.js && ./tests/e2e/run-e2e.sh",
    "test:e2e:ios:simple": "detox test --configuration ios.sim.debug --config-path .detoxrc.js",
    "test:e2e:android": "detox test --configuration android.emu.debug --config-path .detoxrc.js"
  },
  "dependencies": {
    "expo": "~54.0.29",
    "expo-status-bar": "~3.0.9",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native-stack": "^6.11.0",
    "zustand": "^5.0.2",
    "react-native-toast-message": "^2.2.1",
    "expo-camera": "~17.0.10",
    "expo-image": "~3.0.11",
    "expo-system-ui": "~6.0.9",
    "expo-constants": "~18.0.12",
    "expo-linking": "~8.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.1.10",
    "@types/jest": "^29.5.12",
    "typescript": "^5.3.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "@react-native-community/cli": "^20.0.2",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.0",
    "@testing-library/react-native": "^12.8.0",
    "@testing-library/jest-native": "^5.4.3",
    "detox": "^20.20.0"
  },
  "private": true
}
